<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.ycdyng.refreshnestedlayout.RefreshNestedListViewLayout
        xmlns:rnll="http://schemas.android.com/apk/res-auto"
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        rnll:mode="autoLoad"
        rnll:autoLoadLayout="@layout/custom_auto_load_layout"
        rnll:clickableLayout="@layout/custom_clickable_layout"
        rnll:loadEndLayout="@layout/custom_load_end_layout"
        rnll:loadErrorLayout="@layout/custom_load_error_layout" />

</LinearLayout>
